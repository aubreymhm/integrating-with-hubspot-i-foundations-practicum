doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body
    h1 Pets table
    a(href="/update-cobj") Add an item
    table
        tr
            th Id
            th Name 
            th Eye colour 
            th Size 
        for item in data
            tr
                th #{item.id}
                th #{item.properties.pet_name}
                th #{item.properties.eye_colour}
                th #{item.properties.size}